<div class="container">

  <h2>Edit your <%= @task.title %></h2>

  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <div class="form-group d-flex justify-content-center">
      <%= f.label "Completed?", class: 'mr-3'%>
      <%= f.check_box :completed, class: 'form-check-label checkbox' %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
