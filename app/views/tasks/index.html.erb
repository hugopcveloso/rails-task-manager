

<div class="container">
  <h1 class = 'title'> My Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
    <% if task.completed == false
        mark = '[_]'
       else
        mark = '[X]'
       end %>
    <li class = 'list'> <%=mark%> <%= link_to task.title, task_path(task) %>
      <%=  link_to destroy_path(task), method: :delete, data: {confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </li>
    <% end %>
  </ul>
  <p class = 'font-weight-bold'> <%= link_to "+ Add a new task!", tasks_new_path %> </p>
</div>

